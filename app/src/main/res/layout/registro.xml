<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F6DDCC"
tools:context=".regis">

<EditText
    android:id="@+id/t_contraseña"
    android:layout_width="264dp"
    android:layout_height="60dp"
    android:ems="10"
    android:textColor="#BA4A00"
    android:hint="Contraseña"
    android:inputType="textPassword"
    android:textSize="35sp"
    android:fontFamily="@font/jerseyr"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.724" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="362dp"
    android:layout_height="51dp"
    android:fontFamily="@font/jerseyr"
    android:text="Registro de usuario"
    android:textSize="50sp"
    android:textAlignment="center"
    android:textColor="#BA4A00"
    android:textDirection="inherit"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.054" />

<EditText
    android:id="@+id/t_correo"
    android:layout_width="267dp"
    android:layout_height="60dp"
    android:ems="10"
    android:fontFamily="@font/jerseyr"
    android:textColor="#BA4A00"
    android:hint="Correo Electrónico"
    android:textSize="35sp"
    android:inputType="textEmailAddress"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.506"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.56" />

<Button
    android:id="@+id/b_registrar"
    android:layout_width="283dp"
    android:layout_height="57dp"
    android:backgroundTint="#A04000"
    android:fontFamily="@font/jerseyr"
    android:text="Registrarse"
    android:textSize="40sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.887" />

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="204dp"
    android:layout_height="271dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.21"
    app:srcCompat="@drawable/pre1" />

</androidx.constraintlayout.widget.ConstraintLayout>